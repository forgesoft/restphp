{
    "name": "forgesoft/RestPHP",
    "description": "The RestPHP Framework.",
    "keywords": ["framework", "RestPHP"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*"
    },
    "require-dev": {        
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Services\\": "src/Services/",
            "Components\\": "src/Components/",
            "Tests\\": "src/Tests/",
            "RestPHP\\": "vendor/RestPHP"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    }
}
